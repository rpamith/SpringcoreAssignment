<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
               
     <context:annotation-config/>
     
    
    <bean id="mycompany" class="springcore5.Company">
        <property name="name" value="capgemini Pvt. Ltd." />
        <property name="location" value="India" />
    </bean>
 
     <bean id="myemployee" class="springcore5.Employee">
          <property name="id" value="546789" /> 
        <property name="name" value="Amith" />
        </bean> 
        
        <bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor" />
  
</beans>